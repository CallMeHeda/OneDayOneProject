{
    "compilerOptions": {
        "lib": [
            "dom",
            "ES2015"
        ],
        "outDir": "./lib/cjs/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2015",
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [
        "*.ts*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ]
}